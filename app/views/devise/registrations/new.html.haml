- header "Sign Up"
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = devise_error_messages!
  .form-group
    = f.label :first_name
    %br/
    = f.text_field :first_name, autofocus: true, class: 'form-control'
  .form-group
    = f.label :last_name
    %br/
    = f.text_field :last_name, class: 'form-control'
  .form-group
    = f.label :mobile
    %br/
    = f.text_field :mobile, class: 'form-control'
  .form-group
    = f.label :birth_date
    %br/
    = f.date_select :birth_date, start_year: 1920, class: 'form-control'
  .form-group
    = f.label :Gender
    %br/
    = f.radio_button :sex, 'male', :checked => true
    = label :sex, 'Male'
    = f.radio_button :sex, 'female'
    = label :sex, 'Female'
  .form-group
    = f.label :email
    %br/
    = f.email_field :email, class: 'form-control'
  .form-group
    = f.label :password
    - if @minimum_password_length
      %em
        (#{@minimum_password_length} characters minimum)
    %br/
    = f.password_field :password, autocomplete: "off", class: 'form-control estimate-password'
  .form-group
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control estimate-password'
  .actions
    = f.submit "Sign up", class: 'btn btn-primary'
= render "devise/shared/links"
