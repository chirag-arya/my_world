<div id="newRoom">
  <fieldset>
    <legend>Start a new party room</legend>
    <%= form_for(@new_room) do |f| %>
      Party Name: <%= f.text_field :name %><br/><br/>
      Public? <%= f.check_box :public %><br/><br/>

    <%= f.submit %>
    <% end %>
  </fieldset>
</div>

<fieldset>
  <legend>Existing party rooms</legend>
  <table cellpadding="2" cellspacing="5">
    <tr>
    <th>Name</th>
    <th>Started</th>
    </tr>
    <% if @rooms.present? %>
      <% @rooms.each do |room| %>
        <tr>
        <td width="100px"><a href="/party/<%= room.id %>"><%= room.name %></a></td>
        <td><%= room.created_at %></td>
        </tr>
      <% end %>
    <% end %>
  </table>
</fieldset>