- header "My Profile"
= form_for [:user, @profile] do |f|
  .form-group
    = f.label :profile_pic
    %br/
    = f.file_field :image, onchange: "this.form.submit();"#, onchange: "readURL(this);"
    %br/
    = image_tag f.object.image.url(:large), :class => "user_circle_pro_pic"
    = hidden_field_tag :image, "user_form"
    / %br/
    / %img.img-responsive.img-circle{:id => "show_image"}/
  .form-group
    = f.label :relationship_status
    %br/
    = f.select(:relationship_status, Profile::RELATION_STATUS)
  .form-group
    = f.label :address_1
    %br/
    = f.text_field :address1, class: 'form-control'
  .form-group
    = f.label :address_2
    %br/
    = f.text_field :address2, class: 'form-control'
  .form-group
    = f.label :about_me
    %br/
    = f.text_area :about, class: 'form-control'
  .actions
    = f.submit "Save", class: 'btn btn-primary', name: "form_submitted"

